{
  "name": "boilerplate_gulp",
  "version": "1.0.0",
  "description": "Boilerplate using Gulp 4 to web development",
  "main": "gulpfile.js",
  "scripts": {
    "lint": "eslint ./src/assets/js",
    "lint:fix": "eslint ./src/assets/js --fix",
    "clean": "gulp clean",
    "dev": "gulp dev",
    "prebuild": "npm run lint",
    "build": "gulp build",
    "postbuild": "browserify ./dist/assets/js/index.min.js -o ./dist/assets/js/index.min.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "jmontejr",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmontejr/boilerplate_gulp"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "browserify": "^16.5.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "gulp": "^4.0.2",
    "gulp-cache": "^1.1.3",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "husky": "^4.2.3",
    "uglify-es": "^3.3.9"
  }
}